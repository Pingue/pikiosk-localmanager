{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LocalManager",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "python": "${workspaceFolder}/venv/bin/python", // Path to the Python interpreter of your venv
            "env": {
                "FLASK_APP": "localmanager.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port=5002"
            ],
            "jinja": true
        }
    ]
}